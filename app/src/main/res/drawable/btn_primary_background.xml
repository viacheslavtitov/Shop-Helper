<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorButtonPrimaryDark"
                android:endColor="@color/colorButtonPrimaryDark"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="@color/colorButtonPrimary"
                android:endColor="@color/colorButtonPrimary"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/colorButtonPrimary"
                android:endColor="@color/colorButtonPrimary"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/colorButtonDisabled"
                android:endColor="@color/colorButtonDisabled"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item android:color="@color/colorButtonPrimary" >
        <shape>
            <gradient
                android:startColor="@color/colorButtonPrimary"
                android:endColor="@color/colorButtonPrimary"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>